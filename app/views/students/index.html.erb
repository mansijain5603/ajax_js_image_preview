<%= render "header" %>

<div id="all-students">
  <% @students.each do |student| %>
    <%= render "student", student: student %>
  <% end %>
</div>

<%= link_to "new student", new_student_path,class: "btn btn-primary", data: {bs_toggle: "modal", bs_target: "#NewStudentForm", remote: true} %>


<!-- Modal -->
<div class="modal fade" id="NewStudentForm" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="NewStudentFormLabel">New Student Form</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div id="NewStudentForm"> 
        <%#= render 'students/form'%>
      </div>
    </div>
  </div>
</div>
